<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PrimaryButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="TitleFont">
        <item name="android:textColor">@color/gray50</item>
        <item name="android:textSize">@dimen/text_size_22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBodyEighteenGray">
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/neutral_gray</item>
    </style>

    <style name="TextBodyColorPrimary" parent="TextBodyEighteenGray">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextBodyColorPrimaryDark" parent="TextBodyEighteenGray">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!-- TODO: Add necessary styles -->

</resources>
